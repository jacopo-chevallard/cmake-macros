# An external project for FLAP
# URL https://github.com/szaghi/FLAP
set ( FLAP_PREFIX ${CMAKE_BINARY_DIR}/dependencies )

set ( FLAP_SOURCE  ${FLAP_PREFIX}/flap-src )
set ( FLAP_BINARY  ${FLAP_PREFIX}/flap )
set ( FLAP_INSTALL ${CMAKE_INSTALL_PREFIX} )

set (FLAP_LIBRARY_NAME flap)
set (FLAP_CMAKE_LIBDIR ${CMAKE_INSTALL_PREFIX}/lib)
set (FLAP_CMAKE_INCLUDEDIR ${CMAKE_INSTALL_PREFIX}/include/${FLAP_LIBRARY_NAME})

ExternalProject_Add(
  EXT_flap
  DOWNLOAD_DIR ${FLAP_PREFIX}
  SOURCE_DIR ${FLAP_SOURCE}
  BINARY_DIR ${FLAP_BINARY}
  INSTALL_DIR ${FLAP_INSTALL}
  URL $ENV{CMAKE_DEPENDENCIES}/archives/FLAP-v1.1.6.tar.gz
  PATCH_COMMAND cp $ENV{CMAKE_MACROS}/external/flap/CMakeLists.txt <SOURCE_DIR>
  CMAKE_ARGS -DCMAKE_Fortran_COMPILER=${CMAKE_Fortran_COMPILER} -DCMAKE_CXX_COMPILER=${CMAKE_CXX_COMPILER} -DCMAKE_C_COMPILER=${CMAKE_C_COMPILER} -DCMAKE_Fortran_FLAGS=${CMAKE_Fortran_FLAGS} -DCMAKE_CXX_FLAGS=${CMAKE_CXX_FLAGS} -DCMAKE_C_FLAGS=${CMAKE_C_FLAGS} -DCMAKE_INSTALL_PREFIX=<INSTALL_DIR> -DCMAKE_NO_DEFAULT_PATH=${CMAKE_NO_DEFAULT_PATH} -DSHIPPABLE=${SHIPPABLE} -DCMAKE_PARENT_SOURCE_DIR=${CMAKE_CURRENT_SOURCE_DIR} -DCMAKE_LIBRARY_TYPE=${CMAKE_LIBRARY_TYPE}
  )

set ( FLAP_INCLUDE_DIR ${FLAP_CMAKE_INCLUDEDIR} CACHE INTERNAL "FLAP include directory" )
set ( FLAP_LIBRARIES "${FLAP_CMAKE_LIBDIR}/${CMAKE_LIBRARY_PREFIX}${FLAP_LIBRARY_NAME}${CMAKE_LIBRARY_SUFFIX}" CACHE INTERNAL "FLAP library" )
