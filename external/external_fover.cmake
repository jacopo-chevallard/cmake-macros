# An external project for FOVER
# URL https://github.com/zhouguidi/fover
set ( FOVER_PREFIX ${CMAKE_BINARY_DIR}/dependencies )

set ( FOVER_SOURCE  ${FOVER_PREFIX}/fover-src )
set ( FOVER_BINARY  ${FOVER_PREFIX}/fover )
set ( FOVER_INSTALL ${CMAKE_INSTALL_PREFIX} )

set (FOVER_LIBRARY_NAME fover)
set (FOVER_CMAKE_LIBDIR ${CMAKE_INSTALL_PREFIX}/lib)
set (FOVER_CMAKE_INCLUDEDIR ${CMAKE_INSTALL_PREFIX}/include/${FOVER_LIBRARY_NAME})

ExternalProject_Add(
  EXT_fover
  DOWNLOAD_DIR ${FOVER_PREFIX}
  SOURCE_DIR ${FOVER_SOURCE}
  BINARY_DIR ${FOVER_BINARY}
  INSTALL_DIR ${FOVER_INSTALL}
  URL $ENV{CMAKE_DEPENDENCIES}/archives/fover-0.6.0.tar.gz
  PATCH_COMMAND cp $ENV{CMAKE_MACROS}/external/fover/CMakeLists.txt <SOURCE_DIR>
  CMAKE_ARGS -DCMAKE_Fortran_COMPILER=${CMAKE_Fortran_COMPILER} -DCMAKE_CXX_COMPILER=${CMAKE_CXX_COMPILER} -DCMAKE_C_COMPILER=${CMAKE_C_COMPILER} -DCMAKE_Fortran_FLAGS=${CMAKE_Fortran_FLAGS} -DCMAKE_CXX_FLAGS=${CMAKE_CXX_FLAGS} -DCMAKE_C_FLAGS=${CMAKE_C_FLAGS} -DCMAKE_INSTALL_PREFIX=<INSTALL_DIR> -DCMAKE_NO_DEFAULT_PATH=${CMAKE_NO_DEFAULT_PATH} -DSHIPPABLE=${SHIPPABLE} -DCMAKE_PARENT_SOURCE_DIR=${CMAKE_CURRENT_SOURCE_DIR} -DCMAKE_LIBRARY_TYPE=${CMAKE_LIBRARY_TYPE}
  )

set ( FOVER_INCLUDE_DIR ${FOVER_CMAKE_INCLUDEDIR} CACHE INTERNAL "FOVER include directory" )
set ( FOVER_LIBRARIES "${FOVER_CMAKE_LIBDIR}/${CMAKE_LIBRARY_PREFIX}${FOVER_LIBRARY_NAME}${CMAKE_LIBRARY_SUFFIX}" CACHE INTERNAL "FOVER library" )
