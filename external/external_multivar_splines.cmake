# An external project for MULTIVAR_SPLINES
set ( MULTIVAR_SPLINES_PREFIX ${CMAKE_BINARY_DIR}/dependencies )

set ( MULTIVAR_SPLINES_SOURCE  ${MULTIVAR_SPLINES_PREFIX}/astrofortran-src )
set ( MULTIVAR_SPLINES_BINARY  ${MULTIVAR_SPLINES_PREFIX}/astrofortran )
set ( MULTIVAR_SPLINES_INSTALL ${CMAKE_INSTALL_PREFIX} )

set (MULTIVAR_SPLINES_LIBRARY_NAME multivar_splines)
set (MULTIVAR_SPLINES_CMAKE_LIBDIR ${CMAKE_INSTALL_PREFIX}/lib)
set (MULTIVAR_SPLINES_CMAKE_INCLUDEDIR ${CMAKE_INSTALL_PREFIX}/include/${MULTIVAR_SPLINES_LIBRARY_NAME})

ExternalProject_Add(
  EXT_multivar_splines
  DOWNLOAD_DIR ${MULTIVAR_SPLINES_PREFIX}
  SOURCE_DIR ${MULTIVAR_SPLINES_SOURCE}
  BINARY_DIR ${MULTIVAR_SPLINES_BINARY}
  INSTALL_DIR ${MULTIVAR_SPLINES_INSTALL}
  URL $ENV{CMAKE_DEPENDENCIES}/archives/multivar_splines.tar.gz
  PATCH_COMMAND cp $ENV{CMAKE_MACROS}/external/multivar_splines/CMakeLists.txt <SOURCE_DIR>
  CMAKE_ARGS -DCMAKE_Fortran_COMPILER=${CMAKE_Fortran_COMPILER} -DCMAKE_Fortran_FLAGS=${CMAKE_Fortran_FLAGS} -DCMAKE_INSTALL_PREFIX=<INSTALL_DIR> -DCMAKE_NO_DEFAULT_PATH=${CMAKE_NO_DEFAULT_PATH} -DSHIPPABLE=${SHIPPABLE} -DCMAKE_PARENT_SOURCE_DIR=${CMAKE_CURRENT_SOURCE_DIR} -DCMAKE_LIBRARY_TYPE=${CMAKE_LIBRARY_TYPE}
  )

set ( MULTIVAR_SPLINES_INCLUDE_DIR ${MULTIVAR_SPLINES_CMAKE_INCLUDEDIR} CACHE INTERNAL "MULTIVAR_SPLINES include directory" )
set ( MULTIVAR_SPLINES_LIBRARIES "${MULTIVAR_SPLINES_CMAKE_LIBDIR}/${CMAKE_LIBRARY_PREFIX}${MULTIVAR_SPLINES_LIBRARY_NAME}${CMAKE_LIBRARY_SUFFIX}" CACHE INTERNAL "MULTIVAR_SPLINES library" )
